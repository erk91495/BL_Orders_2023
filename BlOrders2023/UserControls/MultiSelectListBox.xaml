<!-- MultiSelectListBox.xaml -->
<UserControl
    x:Class="BlOrders2023.UserControls.MultiSelectListBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:usercontrols="using:BlOrders2023.UserControls" 
    d:DataContext="{d:DesignInstance Type=usercontrols:MultiSelectListBox}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TreeView x:Name="SelectionTree" SelectionMode="Multiple">
            <TreeView.RootNodes>
                <TreeViewNode x:Name="RootNode" Content="All" IsExpanded="True">
                    
                </TreeViewNode>
            </TreeView.RootNodes>
        </TreeView>
    </Grid>
</UserControl>
