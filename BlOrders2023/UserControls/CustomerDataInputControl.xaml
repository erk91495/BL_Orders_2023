<ContentControl
    x:Class="BlOrders2023.UserControls.CustomerDataInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlOrders2023.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <StackPanel Orientation="Vertical">
        <Grid x:Name="AddressGrid" ColumnSpacing="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                <TextBlock Text="Customer Name: " />
                <TextBox x:Name="CustomerNameTextBox" Text="{x:Bind ViewModel.Customer.CustomerName, Mode=TwoWay}" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Buyer: " />
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="BuyerTextBox" Text="{x:Bind ViewModel.Customer.Buyer, Mode=TwoWay}" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="0">
                <TextBlock Text="Address: " />
                <TextBox x:Name="AddressTextBox" Text="{x:Bind ViewModel.Customer.Address, Mode=TwoWay}" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="0">
                <TextBlock Text="City: " />
                <TextBox x:Name="CityTextBox" Text="{x:Bind ViewModel.Customer.City, Mode=TwoWay}" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="0">
                <TextBlock Text="State: " />
                <ComboBox x:Name="StateComboBox" SelectedItem="{x:Bind ViewModel.Customer.State, Mode=TwoWay}" Width="200">
                </ComboBox> 
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="0">
                <TextBlock Text="Zip Code: " />
                <TextBox x:Name="ZipCodeTextBox" Text="{x:Bind ViewModel.Customer.ZipCode, Mode=TwoWay}" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Phone: " />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="PhoneTextBox" Text="{x:Bind ViewModel.Customer.Phone, Mode=TwoWay}" Width="175" Margin="0,0,10,0" />
                    <TextBlock Text="ext. "  VerticalAlignment="Bottom"/>
                    <TextBox x:Name="PhoneExtTextBox" Text="{x:Bind ViewModel.Customer.PhoneExt, Mode=TwoWay}" Width="50" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2">
                <TextBlock Text="Phone: " />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="Phone_2TextBox" Text="{x:Bind ViewModel.Customer.Phone_2, Mode=TwoWay}" Width="175" Margin="0,0,10,0" />
                    <TextBlock Text="ext. "  VerticalAlignment="Bottom"/>
                    <TextBox x:Name="Phone2ExtTextBox" Text="{x:Bind ViewModel.Customer.Phone2Ext, Mode=TwoWay}" Width="50" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="1">
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Fax: " />
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="FaxTextBox" Text="{x:Bind ViewModel.Customer.Fax, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="1">
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Email: " />
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="EmailTextBox" Text="{x:Bind ViewModel.Customer.Email, Mode=TwoWay}"/>
            </StackPanel>
        
        </Grid>


        <StackPanel x:Name="WarehouseStackPanel" Orientation="Horizontal" Margin="5" RelativePanel.Below="ContactInfoGrid" HorizontalAlignment="Center">
            <CheckBox x:Name="SingleProdPerPalletCheckBox" IsChecked="{x:Bind ViewModel.Customer.SingleProdPerPallet, Mode=TwoWay}" Content="Warehouse Pallet Loading" />
        </StackPanel>

    </StackPanel>

</ContentControl>
