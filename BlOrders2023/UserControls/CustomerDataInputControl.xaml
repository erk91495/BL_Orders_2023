<ContentControl
    x:Class="BlOrders2023.UserControls.CustomerDataInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlOrders2023.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Customer Name: " Margin="5" />
            <TextBox x:Name="CustomerNameTextBox" Text="{x:Bind ViewModel.Customer.CustomerName, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Address: " Margin="5" />
            <TextBox x:Name="AddressTextBox" Text="{x:Bind ViewModel.Customer.Address, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="City: " Margin="5" />
            <TextBox x:Name="CityTextBox" Text="{x:Bind ViewModel.Customer.City, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="State: " Margin="5" />
            <ComboBox x:Name="StateComboBox" SelectedItem="{x:Bind ViewModel.Customer.State, Mode=TwoWay}" Margin="5">

            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Zip Code: " Margin="5" />
            <TextBox x:Name="ZipCodeTextBox" Text="{x:Bind ViewModel.Customer.ZipCode, Mode=TwoWay}" Margin="5" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Phone: " Margin="5" />
            <TextBox x:Name="PhoneTextBox" Text="{x:Bind ViewModel.Customer.Phone, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Phone Extension: " Margin="5" />
            <TextBox x:Name="PhoneExtTextBox" Text="{x:Bind ViewModel.Customer.PhoneExt, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Phone 2: " Margin="5" />
            <TextBox x:Name="Phone2TextBox" Text="{x:Bind ViewModel.Customer.Phone_2, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Phone 2 Extension: " Margin="5" />
            <TextBox x:Name="Phone2ExtTextBox" Text="{x:Bind ViewModel.Customer.Phone2Ext, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Buyer: " Margin="5" />
            <TextBox x:Name="BuyerTextBox" Text="{x:Bind ViewModel.Customer.Buyer, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Last Purchase: " Margin="5" />
            <TextBox x:Name="LastPurchaseTextBox" Text="{x:Bind ViewModel.Customer.LastPurchase, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Fax: " Margin="5" />
            <TextBox x:Name="FaxTextBox" Text="{x:Bind ViewModel.Customer.Fax, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Email: " Margin="5" />
            <TextBox x:Name="EmailTextBox" Text="{x:Bind ViewModel.Customer.Email, Mode=TwoWay}" Margin="5" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Gift Grocer: " Margin="5" />
            <TextBox x:Name="GiftGrocerTextBox" Text="{x:Bind ViewModel.Customer.Gift_Grocer, Mode=TwoWay}" Margin="5" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="SingleProdPerPalletCheckBox" IsChecked="{x:Bind ViewModel.Customer.SingleProdPerPallet, Mode=TwoWay}" Margin="5" Content="Single Product Per Pallet"  />
        </StackPanel>


    </StackPanel>
</ContentControl>
