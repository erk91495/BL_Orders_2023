<ContentDialog
    x:Class="BlOrders2023.UserControls.SingleValueInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    mc:Ignorable="d"
    MinWidth="1200"
    CornerRadius="10"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="PromptBlock" Text="{x:Bind Prompt}"/>
        <TextBlock x:Name="Error" Text="Invalid input" Visibility="{x:Bind notValid , Mode=OneWay}" Style="{StaticResource ValidatorTextBlockStyle}"/>
        <TextBox x:Name="InputBox" Text="{x:Bind Value, Mode=TwoWay}"/>
    </StackPanel>
    
</ContentDialog>